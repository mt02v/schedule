<%= render "shared/@partial" %>

<%= link_to "一覧に戻る", :tasks %>

<%= @task.title %>
<%= form_with ,model: @task do |f| %>
  <table>
    <tr>
       <th>開始日</th>
       <td><%= 1 @task.start_date %></td>
    </tr>

    <tr>
       <th>終了日<th>
       <td><%= 1 @task.end_date %></td>
    </tr>

    <tr>
       <th>終日</th>
       <td><%= @task.is_all_day ? '〇': '' %></td>
    </tr>

    <tr>
       <th>スケジュールメモ</th>
       <td><%= @task.memo %></td>
    </tr>
  </table>
<% end %>